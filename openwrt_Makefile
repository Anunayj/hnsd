include $(TOPDIR)/rules.mk

PKG_NAME:=hnsd
PKG_VERSION:=1.1.0
PKG_RELEASE:=1

PKG_SOURCE_PROTO:=git
PKG_SOURCE_URL:=https://github.com/handshake-org/hnsd.git
PKG_SOURCE_VERSION:=fd09b2a3a30328d57b9aba67a3e5cf286782ec01
PKG_MIRROR_HASH:=7598477b7653a133295283c091205c6fadf413db899f197ef53b1c75490b652c

PKG_BUILD_DIR:=$(BUILD_DIR)/$(PKG_NAME)-$(PKG_VERSION)
PKG_BUILD_DEPENDS:=libunbound libuv

PKG_LICENSE:=MIT
PKG_LICENSE_FILES:=LICENSE

PKG_INSTALL:=1
PKG_BUILD_PARALLEL:=1

include $(INCLUDE_DIR)/package.mk

define Package/hnsd
  SECTION:=net
  CATEGORY:=Network 
  TITLE:=hnsd
  URL:=https://handshake.org
  DEPENDS:=+libunbound
endef

define Package/hnsd/description
 SPV resolver daemon for the Handshake network.
endef

define Build/Prepare
	$(Build/Prepare/Default)
	$(PKG_BUILD_DIR)/autogen.sh
endef

define Package/hnsd/install
	$(INSTALL_DIR) $(1)/usr/bin/
	$(INSTALL_BIN) $(PKG_INSTALL_DIR)/usr/bin/hnsd $(1)/usr/bin/
endef

$(eval $(call BuildPackage,hnsd))
